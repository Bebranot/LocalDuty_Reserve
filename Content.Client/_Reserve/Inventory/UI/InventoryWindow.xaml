<DefaultWindow
    xmlns="https://spacestation14.io"
    xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="{Loc reserve-inventory-title}"
    SetSize="700 700"
    Resizable="False">
    <BoxContainer Orientation="Vertical" VerticalExpand="True" HorizontalExpand="True">

        <Label Name="StatusLabel"
               Text="{Loc reserve-inventory-loading}"
               HorizontalAlignment="Center"
               Margin="8 8 8 4"
               ReservesSpace="False" />

        <PanelContainer HorizontalExpand="True" VerticalExpand="True" Margin="8 4 8 8">
            <PanelContainer.PanelOverride>
                <gfx:StyleBoxFlat BackgroundColor="#1b1b1e" />
            </PanelContainer.PanelOverride>
            <ScrollContainer HorizontalExpand="True" VerticalExpand="True" Margin="8">
                <GridContainer Name="ItemsContainer" Columns="3" HorizontalExpand="True" />
            </ScrollContainer>
        </PanelContainer>

    </BoxContainer>
</DefaultWindow>
